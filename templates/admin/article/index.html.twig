{% extends 'base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-header {
            background: #FFFFFF;
            border-bottom: 1px solid #E5E7EB;
            padding: 3rem 0;
        }
        
        .admin-title {
            font-size: 2.25rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #1F2937;
            letter-spacing: -0.01em;
        }
        
        .admin-subtitle {
            color: #6B7280;
        }
        
        .admin-section {
            padding: 3rem 0;
            background: #FFFFFF;
        }
        
        .admin-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .btn-new {
            background-color: var(--primary-purple);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-new:hover {
            background-color: #6D28D9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        }
        
        .table-container {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }
        
        .articles-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .articles-table thead {
            background-color: var(--bg-light);
        }
        
        .articles-table th {
            padding: 1rem 1.5rem;
            text-align: left;
            font-weight: 700;
            color: var(--text-dark);
            border-bottom: 2px solid var(--border-color);
        }
        
        .articles-table td {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }
        
        .articles-table tbody tr:last-child td {
            border-bottom: none;
        }
        
        .articles-table tbody tr:hover {
            background-color: var(--bg-light);
        }
        
        .article-title-cell {
            font-weight: 600;
            color: var(--text-dark);
        }
        
        .article-meta {
            font-size: 0.875rem;
            color: var(--text-gray);
        }
        
        .badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .badge-category {
            background-color: #FFFFFF;
            color: #3730A3;
            border: 1px solid #E5E7EB;
        }
        
        .actions-cell {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        .btn-small {
            padding: 0.375rem 0.875rem;
            border-radius: 0.375rem;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.875rem;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
        }
        
        .btn-view {
            background-color: #FFFFFF;
            color: #1E40AF;
            border: 1px solid #E5E7EB;
        }
        
        .btn-view:hover {
            background-color: #FFFFFF;
            border-color: #1E40AF;
        }
        
        .btn-edit {
            background-color: #FEF3C7;
            color: #92400E;
        }
        
        .btn-edit:hover {
            background-color: #FDE68A;
        }
        
        .btn-delete {
            background-color: #FEE2E2;
            color: #991B1B;
        }
        
        .btn-delete:hover {
            background-color: #FECACA;
        }
        
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-gray);
        }
        
        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }
        
        .empty-state h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }
        
        @media (max-width: 768px) {
            .table-container {
                overflow-x: auto;
            }
            
            .articles-table {
                min-width: 600px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="admin-header">
        <div class="container">
            <h1 class="admin-title">Gestion des articles</h1>
            <p class="admin-subtitle">Cr√©ez, modifiez et supprimez vos articles</p>
        </div>
    </section>

    <section class="admin-section">
        <div class="container">
            <div class="admin-actions">
                <h2 style="font-size: 1.5rem; font-weight: 700;">
                    Mes articles ({{ articles|length }})
                </h2>
                <a href="{{ path('app_admin_article_new') }}" class="btn-new">
                    <span>‚ûï</span>
                    <span>Nouvel article</span>
                </a>
            </div>

            {% if articles|length > 0 %}
                <div class="table-container">
                    <table class="articles-table">
                        <thead>
                            <tr>
                                <th>Article</th>
                                <th>Cat√©gorie</th>
                                <th>Date</th>
                                <th>Commentaires</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td>
                                        <div class="article-title-cell">{{ article.title }}</div>
                                        <div class="article-meta">Par {{ article.author.fullName }}</div>
                                    </td>
                                    <td>
                                        {% if article.category %}
                                            <span class="badge badge-category">{{ article.category }}</span>
                                        {% else %}
                                            <span class="article-meta">Sans cat√©gorie</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="article-meta">{{ article.createdAt|date('d/m/Y') }}</div>
                                    </td>
                                    <td>
                                        <div class="article-meta">{{ article.comments|length }} commentaire(s)</div>
                                    </td>
                                    <td>
                                        <div class="actions-cell">
                                            <a href="{{ path('app_article_show', {slug: article.slug}) }}" class="btn-small btn-view" target="_blank">
                                                üëÅ Voir
                                            </a>
                                            <a href="{{ path('app_admin_article_edit', {id: article.id}) }}" class="btn-small btn-edit">
                                                ‚úèÔ∏è √âditer
                                            </a>
                                            <form method="post" action="{{ path('app_admin_article_delete', {id: article.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet article ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                <button type="submit" class="btn-small btn-delete">
                                                    üóëÔ∏è Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="table-container">
                    <div class="empty-state">
                        <div class="empty-state-icon">üìù</div>
                        <h3>Aucun article</h3>
                        <p>Vous n'avez pas encore cr√©√© d'article. Commencez par en cr√©er un !</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

