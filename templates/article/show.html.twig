{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - Car Blog{% endblock %}
{% block description %}{{ article.content|slice(0, 160) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .article-header {
            background: #FFFFFF;
            border-bottom: 1px solid #E5E7EB;
            padding: 3rem 0;
        }
        
        .article-meta {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
            color: #6B7280;
            flex-wrap: wrap;
        }
        
        .article-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            line-height: 1.25;
            color: #1F2937;
            letter-spacing: -0.01em;
        }
        
        .article-category {
            display: inline-block;
            padding: 0.375rem 0.875rem;
            border-radius: 0.5rem;
            font-size: 0.813rem;
            font-weight: 600;
            background-color: #F3F4F6;
            color: #7C3AED;
        }
        
        .article-content-wrapper {
            padding: 4rem 0;
            background: #FFFFFF;
        }
        
        .article-container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .article-image {
            width: 100%;
            max-height: 500px;
            object-fit: cover;
            border-radius: 1rem;
            margin-bottom: 3rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .article-content {
            font-size: 1.125rem;
            line-height: 1.8;
            color: var(--text-dark);
        }
        
        .article-content p {
            margin-bottom: 1.5rem;
        }
        
        .article-footer {
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-color);
        }
        
        .article-author-section {
            display: flex;
            gap: 1.5rem;
            align-items: center;
            padding: 1.5rem;
            background: #FFFFFF;
            border: 1px solid #E5E7EB;
            border-radius: 1rem;
            margin-bottom: 3rem;
        }
        
        .author-avatar {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: #7C3AED;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            flex-shrink: 0;
        }
        
        .author-info h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }
        
        .author-info p {
            color: var(--text-gray);
            font-size: 0.95rem;
        }
        
        /* Comments Section */
        .comments-section {
            margin-top: 4rem;
        }
        
        .comments-header {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 2rem;
            color: var(--text-dark);
        }
        
        .comment {
            background: #FFFFFF;
            border: 1px solid #E5E7EB;
            padding: 1.5rem;
            border-radius: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .comment-author {
            font-weight: 700;
            color: var(--text-dark);
        }
        
        .comment-date {
            color: var(--text-gray);
            font-size: 0.875rem;
        }
        
        .comment-content {
            color: var(--text-dark);
            line-height: 1.6;
        }
        
        .comment-form {
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }
        
        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
            transition: border-color 0.2s;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary-purple);
        }
        
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
        
        .btn-submit {
            background-color: var(--primary-purple);
            color: white;
            padding: 0.875rem 2rem;
            border: none;
            border-radius: 0.5rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1rem;
        }
        
        .btn-submit:hover {
            background-color: #6D28D9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        }
        
        .login-message {
            background: #FFFFFF;
            border: 1px solid #E5E7EB;
            padding: 1.5rem;
            border-radius: 1rem;
            text-align: center;
            color: var(--text-gray);
        }
        
        .login-message a {
            color: var(--primary-purple);
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-message a:hover {
            text-decoration: underline;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary-purple);
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 2rem;
            transition: gap 0.2s;
        }
        
        .back-link:hover {
            gap: 0.75rem;
        }
        
        @media (max-width: 768px) {
            .article-title {
                font-size: 2rem;
            }
            
            .article-content {
                font-size: 1rem;
            }
            
            .article-container {
                padding: 0 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Article Header -->
    <section class="article-header">
        <div class="container">
            <div class="article-container">
                <a href="{{ path('app_articles') }}" class="back-link">‚Üê Retour aux articles</a>
                
                <div class="article-meta">
                    <span>Par {{ article.author.fullName }}</span>
                    <span>‚Ä¢ {{ article.createdAt|date('d F Y') }}</span>
                    {% if article.category %}
                        <span class="article-category">{{ article.category }}</span>
                    {% endif %}
                </div>
                
                <h1 class="article-title">{{ article.title }}</h1>
            </div>
        </div>
    </section>

    <!-- Article Content -->
    <section class="article-content-wrapper">
        <div class="container">
            <div class="article-container">
                {% if article.image %}
                    <img src="{{ article.image }}" alt="{{ article.title }}" class="article-image">
                {% endif %}
                
                <div class="article-content">
                    {% for paragraph in article.content|split('\n\n') %}
                        {% if paragraph|trim %}
                            <p>{{ paragraph|nl2br }}</p>
                        {% endif %}
                    {% endfor %}
                </div>
                
                <div class="article-footer">
                    <!-- Author Section -->
                    <div class="article-author-section">
                        <div class="author-avatar">
                            {{ article.author.firstName|first|upper }}{{ article.author.lastName|first|upper }}
                        </div>
                        <div class="author-info">
                            <h3>{{ article.author.fullName }}</h3>
                            <p>Auteur ‚Ä¢ Membre depuis {{ article.author.createdAt|date('Y') }}</p>
                        </div>
                    </div>
                    
                    <!-- Comments Section -->
                    <div class="comments-section">
                        <h2 class="comments-header">
                            Commentaires ({{ article.comments|length }})
                        </h2>
                        
                        {% if app.user %}
                            <!-- Comment Form -->
                            <div class="comment-form">
                                <h3 style="margin-bottom: 1rem; font-size: 1.25rem;">Laisser un commentaire</h3>
                                {{ form_start(commentForm) }}
                                    <div class="form-group">
                                        {{ form_label(commentForm.content) }}
                                        {{ form_widget(commentForm.content) }}
                                        {{ form_errors(commentForm.content) }}
                                    </div>
                                    <button type="submit" class="btn-submit">Publier le commentaire</button>
                                {{ form_end(commentForm) }}
                            </div>
                        {% else %}
                            <div class="login-message">
                                Vous devez √™tre <a href="{{ path('app_login') }}">connect√©</a> pour laisser un commentaire.
                            </div>
                        {% endif %}
                        
                        <!-- Comments List -->
                        {% if article.comments|length > 0 %}
                            <div class="comments-list">
                                {% for comment in article.comments %}
                                    <div class="comment">
                                        <div class="comment-header">
                                            <div>
                                                <span class="comment-author">{{ comment.author.fullName }}</span>
                                                <span class="comment-date">{{ comment.createdAt|date('d M Y √† H:i') }}</span>
                                            </div>
                                            {% if app.user and (comment.author == app.user or is_granted('ROLE_ADMIN')) %}
                                                <form method="post" action="{{ path('app_comment_delete', {id: comment.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce commentaire ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_comment' ~ comment.id) }}">
                                                    <button type="submit" style="background: none; border: none; color: #DC2626; cursor: pointer; font-size: 1.25rem; padding: 0;" title="Supprimer">üóëÔ∏è</button>
                                                </form>
                                            {% endif %}
                                        </div>
                                        <div class="comment-content">
                                            {{ comment.content }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p style="color: var(--text-gray); text-align: center; padding: 2rem 0;">
                                Aucun commentaire pour le moment. Soyez le premier √† commenter !
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

