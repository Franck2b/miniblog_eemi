{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-wrapper {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 0;
            background: #FFFFFF;
        }
        
        .login-container {
            max-width: 450px;
            width: 100%;
            background: white;
            padding: 3rem;
            border-radius: 1.5rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .login-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .login-title {
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }
        
        .login-subtitle {
            color: var(--text-gray);
            font-size: 0.95rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
            font-size: 0.95rem;
        }
        
        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
            transition: border-color 0.2s;
            box-sizing: border-box;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary-purple);
        }
        
        .form-error {
            background-color: #FEE2E2;
            color: #991B1B;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--primary-red);
            font-size: 0.95rem;
        }
        
        .btn-login {
            width: 100%;
            background-color: var(--primary-purple);
            color: white;
            padding: 1rem;
            border: none;
            border-radius: 0.5rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1rem;
            margin-top: 0.5rem;
        }
        
        .btn-login:hover {
            background-color: #6D28D9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        }
        
        .login-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-color);
        }
        
        .login-footer-text {
            color: var(--text-gray);
            font-size: 0.95rem;
        }
        
        .login-footer a {
            color: var(--primary-purple);
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-footer a:hover {
            text-decoration: underline;
        }
        
        .demo-credentials {
            background-color: #FFFFFF;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--primary-blue);
        }
        
        .demo-credentials-title {
            font-weight: 700;
            color: #1E40AF;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }
        
        .demo-credentials-list {
            margin: 0;
            padding-left: 1.5rem;
            color: #1E40AF;
            font-size: 0.875rem;
        }
        
        @media (max-width: 768px) {
            .login-container {
                padding: 2rem;
                margin: 0 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <div class="container">
            <div class="login-container">
                <div class="login-header">
                    <div class="login-icon">üîê</div>
                    <h1 class="login-title">Connexion</h1>
                    <p class="login-subtitle">Connectez-vous pour acc√©der √† votre compte</p>
                </div>

                {% if error %}
                    <div class="form-error">
                        <strong>‚ùå Erreur de connexion</strong><br>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="demo-credentials">
                    <div class="demo-credentials-title">üîë Identifiants de test :</div>
                    <ul class="demo-credentials-list">
                        <li><strong>Admin :</strong> admin@miniblog.com / admin123</li>
                        <li><strong>User :</strong> john.musk@example.com / password123</li>
                    </ul>
                </div>

                <form method="post" action="{{ path('app_login') }}">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input 
                            type="email" 
                            name="_username" 
                            id="email" 
                            class="form-control" 
                            value="{{ last_username }}" 
                            placeholder="votre@email.com"
                            required 
                            autofocus
                        >
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input 
                            type="password" 
                            name="_password" 
                            id="password" 
                            class="form-control" 
                            placeholder="Votre mot de passe"
                            required
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn-login">
                        Se connecter
                    </button>
                </form>

                <div class="login-footer">
                    <p class="login-footer-text">
                        <a href="{{ path('app_home') }}">‚Üê Retour √† l'accueil</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

