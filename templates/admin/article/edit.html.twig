{% extends 'base.html.twig' %}

{% block title %}√âditer {{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-header {
            background: #FFFFFF;
            border-bottom: 1px solid #E5E7EB;
            padding: 3rem 0;
        }
        
        .form-title {
            font-size: 2.25rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            color: #1F2937;
            letter-spacing: -0.01em;
        }
        
        .form-subtitle {
            color: #6B7280;
        }
        
        .form-section {
            padding: 3rem 0;
            background: #FFFFFF;
        }
        
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }
        
        .form-group {
            margin-bottom: 1.75rem;
        }
        
        .form-label {
            display: block;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
            font-size: 0.95rem;
        }
        
        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 0.5rem;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
            transition: border-color 0.2s;
            box-sizing: border-box;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary-purple);
        }
        
        textarea.form-control {
            min-height: 250px;
            resize: vertical;
        }
        
        .form-help {
            display: block;
            margin-top: 0.375rem;
            font-size: 0.875rem;
            color: var(--text-gray);
        }
        
        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-color);
        }
        
        .btn-submit {
            background-color: var(--primary-purple);
            color: white;
            padding: 0.875rem 2rem;
            border: none;
            border-radius: 0.5rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1rem;
        }
        
        .btn-submit:hover {
            background-color: #6D28D9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        }
        
        .btn-cancel {
            background-color: var(--bg-light);
            color: var(--text-dark);
            padding: 0.875rem 2rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.2s;
            font-size: 1rem;
        }
        
        .btn-cancel:hover {
            background-color: var(--border-color);
        }
        
        .form-errors {
            background-color: #FEE2E2;
            color: #991B1B;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--primary-red);
        }
        
        .form-errors ul {
            margin: 0;
            padding-left: 1.5rem;
        }
        
        .info-box {
            background-color: #FFFFFF;
            color: #1E40AF;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--primary-blue);
            border: 1px solid #E5E7EB;
        }
        
        @media (max-width: 768px) {
            .form-container {
                padding: 1.5rem;
            }
            
            .form-actions {
                flex-direction: column-reverse;
            }
            
            .btn-submit,
            .btn-cancel {
                width: 100%;
                text-align: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="form-header">
        <div class="container">
            <h1 class="form-title">√âditer l'article</h1>
            <p class="form-subtitle">Modifiez les informations de votre article</p>
        </div>
    </section>

    <section class="form-section">
        <div class="container">
            <div class="form-container">
                <div class="info-box">
                    <strong>üìù Article en cours d'√©dition :</strong> {{ article.title }}
                </div>
                
                {{ form_start(form) }}
                
                {% if not form.vars.valid %}
                    <div class="form-errors">
                        <strong>Erreurs dans le formulaire :</strong>
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image) }}
                    {{ form_help(form.image) }}
                    {{ form_errors(form.image) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('app_admin_article_index') }}" class="btn-cancel">Annuler</a>
                    <button type="submit" class="btn-submit">Enregistrer les modifications</button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}

